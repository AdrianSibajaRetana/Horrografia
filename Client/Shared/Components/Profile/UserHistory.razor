@if (Historial.Any())
{
    <div class='block container'>
        <div class='columns is-centered'>
            <div class='column is-10'>
                <div class="block has-text-centered">
                    <h1 class='title'>Historial de partidas</h1>
                    <hr>
                </div>
                <div class="table_width_100">
                    <div class="table_wrapper">
                        <table class="block table is-bordered is-striped is-hoverable is-fullwidth">
                            <thead>
                            <tr>
                                <th>Nivel jugado</th>
                                <th>Errores cometidos</th>
                                <th>Puntaje conseguido</th>
                                <th>Fecha de juego</th>
                                <th>Ver Detalles</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var reporte in Historial)
                            {
                                <tr>
                                    <td>
                                        @GetLevelNameFromId(reporte.IdNivel)
                                    </td>
                                    <td>
                                        @reporte.CantidadErrores
                                    </td>
                                    <td>
                                        @reporte.Puntuacion
                                    </td>
                                    <td>
                                        @reporte.FechaString
                                    </td>
                                    <td>
                                        <button class="button is-success" @onclick="() => OpenDetailsDialoge(reporte)">Detalles</button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <MatchDetailsDialog
        ShowDialogue="ShowDetailsDialoge"
        IsLoading="DialogIsLoading"
        Errores="Errores"
        OnButtonPressed="CloseDialog"/>
}
else
{
    <section class="section is-large">
        <div class="container has-text-centered is-justify-content-center">
            <div class='columns is-mobile is-centered'>
                <div class='column is-8'>
                    <div class="has-text-centered">
                        <div class="block">
                            <h1 class="title">No se encontraron partidas</h1>
                            <h2 class="subtitle">Aún no ha jugado partidas de Horrografía.</h2>    
                        </div>
                        <div class="article-bottom block">
                            <a class="button is-success is-light" href="/juego">
                                <strong>Jugar ahora</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
