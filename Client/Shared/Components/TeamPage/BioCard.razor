<div class="card">    
    <div class="card-image">
        <figure class="image is-3by1">
            <img src="@BackroundImageSource"/>
        </figure>
    </div>

    <div class="BioCard__card-content card-content">
        <div class="BioCard__avatar-wrapper">
            <div class="Avatar image">
                <img src="@PersonImageSource"/>
            </div>
        </div>

        <div class="BioCard__details">
            <p class="title article-title">
                @Name
            </p>
            <p class="subtitle is-6 article-subtitle">
                @PersonRole
            </p>            
            <div class="BioCard__info has-text-justified">
                <p>
                    @Bio
                </p>
            </div>
        </div>
    </div>
</div>

@code
{

    [Parameter]
    public string BackroundImageSource { get; set; }

    [Parameter]
    public string PersonImageSource { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string PersonRole { get; set; }

    [Parameter]
    public string Bio { get; set; }
}