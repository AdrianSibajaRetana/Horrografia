@inject IDialogService DialogService

<MudDialog @bind-IsVisible="ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Crear nivel
        </MudText>
        @if (!ExistenNiveles)
        { 
            <MudText Typo="Typo.subtitle1">
                No se han encontrado niveles en la base de datos. Cree el primer nivel
            </MudText>        
        }
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">bing elit. Quos blanditiis tenetur un</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="CloseDialog" Class="px-10">Cerrar</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="CreateLevel" Class="px-10">Crear Nivel</MudButton>
    </DialogActions>
</MudDialog>