@inject IDialogService DialogService

<MudDialog @bind-IsVisible="@ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Crear nivel
        </MudText>
        @if (!ExistenNiveles)
        { 
            <MudText Typo="Typo.subtitle1">
                No se han encontrado niveles en la base de datos. Cree el primer nivel
            </MudText>        
        }
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">bing elit. Quos blanditiis tenetur un</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Submit" Class="px-10">Cerrar</MudButton>
    </DialogActions>
</MudDialog>



@code {
    [Parameter]
    public bool ShowDialogue { get; set; }

    [Parameter]
    public bool ExistenNiveles { get; set; }

    void Submit() => ShowDialogue = false;
}
