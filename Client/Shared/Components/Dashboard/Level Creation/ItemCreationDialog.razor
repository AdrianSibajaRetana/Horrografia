@inject IDialogService DialogService
@using System.ComponentModel.DataAnnotations

<MudDialog @bind-IsVisible="ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Crear nivel
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="@_model" OnValidSubmit="CreateItem">
            <DataAnnotationsValidator />
            <MudCard Elevation=0>
                <MudCardContent>
                    <MudAutocomplete T="string" 
                                     Label="Forma Correcta"
                                     @bind-Value="_model.FormaCorrecta" 
                                     SearchFunc="@BuscarFormasCorrectasExistentes"
                                     ResetValueOnEmptyText="true" CoerceValue="true" 
                                     For="@(() => _model.FormaCorrecta)"
                                     HelperText="El texto que se espera que el usuario escriba." />
                    <MudAutocomplete Class="mt-4" 
                                     T="string" 
                                     Label="Forma Incorrecta"
                                     @bind-Value="_model.FormaIncorrecta" 
                                     SearchFunc="@BuscarFormasIncorrectasExistentes"
                                     ResetValueOnEmptyText="true" CoerceValue="true" 
                                     For="@(() => _model.FormaCorrecta)"
                                     HelperText="El texto que verá el usuario." />
                    <MudAutocomplete Class="mt-4"
                                     T="string"
                                     Label="Pista"
                                     @bind-Value="_pista.Pista"
                                     SearchFunc="@BuscarPistasExistentes"
                                     ResetValueOnEmptyText="true" CoerceValue="true"
                                     For="@(() => _model.FormaCorrecta)"
                                     HelperText="El texto de ayuda que el usuario puede solicitar." />
                </MudCardContent>
                <MudCardActions>
                    <MudGrid>
                        <MudItem Class="ml-auto">
                            <MudButton Variant="Variant.Text" OnClick="CloseDialog">Cancelar</MudButton>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Success">Crear Item</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
    @*<DialogActions>
        </DialogActions>
    *@
</MudDialog>