@inject IDialogService DialogService
@using System.ComponentModel.DataAnnotations

<MudDialog @bind-IsVisible="ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Editar item
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="@_newModel" OnValidSubmit="UpdateItem">
            <DataAnnotationsValidator />
            <MudCard Elevation=0>
                <MudCardContent>
                    <MudTextField Label="Forma Correcta" 
                                  HelperText="El nombre del nivel a crear."
                                  @bind-Value="_newModel.FormaCorrecta" 
                                  For="@(() => _newModel.FormaCorrecta)"
                                  Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" 
                                  Label="Forma Incorrecta" 
                                  HelperText="La descripción del nivel que verá el usuario."
                                  @bind-Value="_newModel.FormaIncorrecta" 
                                  For="@(() => _newModel.FormaIncorrecta)" 
                                  Variant="Variant.Outlined" />
                    <MudAutocomplete Class="mt-4"
                                     T="string"
                                     Label="Pista"
                                     @bind-Value="_newModel.Pista"
                                     SearchFunc="@BuscarPistasExistentes"
                                     ResetValueOnEmptyText="true"
                                     CoerceValue="true"
                                     MinCharacters="2"
                                     Immediate="true"
                                     For="@(() =>_newModel.Pista)"
                                     HelperText="La pista de ayuda que se le podrá dar al usuario."
                                     Variant="Variant.Outlined"/>
                </MudCardContent>
                <MudCardActions>
                    <MudGrid>
                        <MudItem Class="ml-auto">
                            <MudButton Variant="Variant.Text" OnClick="CloseDialog">Cancelar</MudButton>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Info">Editar Item</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>