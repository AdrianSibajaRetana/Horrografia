<MudDialog @bind-IsVisible="ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Editar datos
        </MudText>
        <MudText Typo="Typo.subtitle1">
            Sobrescriba los datos que desea actualizar en el nivel.
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="@newModel" OnValidSubmit="UpdateLevel">
            <DataAnnotationsValidator />
            <MudCard Elevation=0>
                <MudCardContent>
                    <MudTextField Label="Nombre" HelperText="El nombre del nivel."
                                  @bind-Value="newModel.Name" For="@(() => newModel.Name)" Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" Label="Descripción" HelperText="La descripción del nivel que verá el usuario."
                                  @bind-Value="newModel.Description" For="@(() => newModel.Description)" Lines="3" Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" Label="Errores permitidos" HelperText="La cantidad de errores permitidos por partida. [1 a 5 errores]."
                                  @bind-Value="newModel.PossibleErrors" For="@(() => newModel.PossibleErrors)" Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" Label="Numero de items" HelperText="El número de items máximo que tendrá este nivel. [5 a 15 items]."
                                  @bind-Value="newModel.ItemNumber" For="@(() => newModel.ItemNumber)" Variant="Variant.Outlined" />
                </MudCardContent>
                <MudCardActions>
                    <MudGrid Justify="Justify.Center">
                        <MudItem>
                            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="CloseDialog" Class="px-10">Cancelar</MudButton>
                        </MudItem>
                        <MudItem>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Info" Class="px-10">Editar Nivel</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
    @*<DialogActions>
        </DialogActions>
    *@
</MudDialog>