@inject IDialogService DialogService
@using System.ComponentModel.DataAnnotations

<MudDialog @bind-IsVisible="ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Crear nivel
        </MudText>
        @if (!ExistenNiveles)
        {
            <MudText Typo="Typo.subtitle1">
                No se han encontrado niveles en la base de datos. Cree el primer nivel
            </MudText>
        }
    </TitleContent>
    <DialogContent>
        <EditForm Model="@model" OnValidSubmit="CreateLevel">
            <DataAnnotationsValidator />
            <MudCard Elevation=0>
                <MudCardContent>
                    <MudTextField Label="Nombre" HelperText="El nombre del nivel a crear."
                                  @bind-Value="model.Name" For="@(() => model.Name)" Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" Label="Descripción" HelperText="La descripción del nivel que verá el usuario."
                                  @bind-Value="model.Description" For="@(() => model.Description)" Lines="3" Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" Label="Errores permitidos" HelperText="La cantidad de errores permitidos por partida. [1 a 5 errores]."
                                  @bind-Value="model.PossibleErrors" For="@(() => model.PossibleErrors)" Variant="Variant.Outlined" />
                    <MudTextField Class="mt-4" Label="Numero de items" HelperText="El número de items máximo que tendrá este nivel. [5 a 15 items]."
                                  @bind-Value="model.ItemNumber" For="@(() => model.ItemNumber)" Variant="Variant.Outlined" />
                </MudCardContent>
                <MudCardActions>
                    <MudGrid>
                        <MudItem  Class="ml-auto">
                            <MudButton Variant="Variant.Text" OnClick="CloseDialog">Cancelar</MudButton>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Success">Crear Nivel</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
    @*<DialogActions>
        </DialogActions>
    *@
</MudDialog>