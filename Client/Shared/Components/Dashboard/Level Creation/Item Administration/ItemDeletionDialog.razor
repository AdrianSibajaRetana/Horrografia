<MudDialog @bind-IsVisible="ShowDialogue">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3" /> Eliminar nivel
        </MudText>
        <MudText Typo="Typo.subtitle1">
            ¿Está seguro que desea eliminar el siguiente item? La acción no es reversible.
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@_model.FormaCorrecta" Label="Forma Correcta" ReadOnly="true" Class="mt-4" />
        <MudTextField @bind-Value="@_model.Pista" Label="Pista" ReadOnly="true" Class="mt-4" />
        @for (int i = 0; i < _model.FormasIncorrectas.Count(); i++)
        { 
            <MudTextField @bind-Value="@_model.FormasIncorrectas[i]" Label="Forma Incorrecta" ReadOnly="true" Class="mt-4" />
        }
    </DialogContent>
    <DialogActions>
        @if (!_isDeletingItem)
        {
            <MudButton Variant="Variant.Text" OnClick="CloseDialog">Cancelar</MudButton>
            <MudButton Variant="Variant.Text" OnClick="DeleteItem" Color="Color.Error">Borrar item</MudButton>
        }
        else
        {
            <MudItem xs="12" sm="12" md="12">
                <MudText Typo="Typo.subtitle1" Align="Align.Center" GutterBottom="true">
                    @_deletingStatus
                </MudText>
            </MudItem>
            <MudItem xs="12" sm="12" md="12">
                <MudGrid Justify="Justify.Center">
                    <MudItem>
                        <MudItem>
                            <MudProgressCircular Color="Color.Error" Indeterminate="true" />
                        </MudItem>
                    </MudItem>
                </MudGrid>
            </MudItem>
        }
    </DialogActions>
</MudDialog>
