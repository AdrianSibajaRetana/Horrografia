<MudItem xs="12" sm="12" md="12" Style="height: 70vh;">
    @if (Escuelas.Any())
    {
        <MudCard Elevation="2" Class="py-4 pl-4" Outlined="true" Style="max-height: 40%; ">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudGrid>
                        <MudItem xs="12" sm="12" md="9">
                            <MudText Typo="Typo.h5">Administración de escuelas</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="12" md="3" Class="my-auto">
                            <MudGrid Justify="Justify.Center">
                                <MudItem>
                                    <MudTooltip Text="Añadir escuela">
                                        <MudFab Color="Color.Success"
                                                Icon="@Icons.Material.Filled.Add"
                                                Size="Size.Medium"
                                                IconSize="Size.Medium"
                                                DisableElevation="true" OnClick="OpenSchoolCreationDialog" />
                                    </MudTooltip>
                                </MudItem>
                            </MudGrid>
                        </MudItem>
                    </MudGrid>
                </CardHeaderContent>
            </MudCardHeader>
        </MudCard>

        <MudPaper Class="py-4 pl-4 mt-4" Elevation="1" Style=" max-height: 55%;">
            <MudGrid>
                <MudItem xs="12" sm="12" md="12">
                    <MudSimpleTable Hover="true" Striped="@true" Style="overflow-x: auto; max-height: 90%;" Elevation="0">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Código</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var escuela in Escuelas)
                            {
                                <tr>
                                    <td>@escuela.Nombre</td>
                                    <td>@escuela.Codigo</td>
                                </tr>
                            }
                        </tbody>
                    </MudSimpleTable>
                </MudItem>
            </MudGrid>
        </MudPaper>
    }
    else
    {
        <MudGrid Justify="Justify.Center" Class="pa-3">
            <MudItem xs="12" sm="12" md="12">
                <MudText Typo="Typo.h5" GutterBottom="true" Align="Align.Center">
                    No se han registrado escuelas.
                </MudText>
            </MudItem>
            <MudItem xs="12" sm="12" md="12">
                <MudText Typo="Typo.subtitle1" Align="Align.Center" GutterBottom="true">
                    No existen escuelas registrados en la base de datos.
                </MudText>
            </MudItem>
            <MudItem xs="12" sm="12" md="12">
                <MudGrid Justify="Justify.Center">
                    <MudItem>
                        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="OpenSchoolCreationDialog">
                            Crear item
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    }

    <MudDialog @bind-IsVisible="_showSchoolCreationDialog">
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Crear Escuela
            </MudText>
        </TitleContent>
        <DialogContent>
            <EditForm Model="@_model" OnValidSubmit="CreateSchool">
                <DataAnnotationsValidator />
                <MudCard Elevation=0>
                    <MudCardContent>
                        <MudTextField 
                                      Label="Nombre" 
                                      HelperText="El nombre del nivel a crear."
                                      @bind-Value="_model.Nombre" 
                                      For="@(() => _model.Nombre)" 
                                      Variant="Variant.Outlined" />

                    </MudCardContent>
                    <MudCardActions>
                        <MudGrid>
                            <MudItem Class="ml-auto">
                                <MudButton Variant="Variant.Text" OnClick="CloseSchoolCreationDialog">Cancelar</MudButton>
                                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Success">Crear Escuela</MudButton>
                            </MudItem>
                        </MudGrid>
                    </MudCardActions>
                </MudCard>
            </EditForm>
        </DialogContent>
    </MudDialog>

</MudItem>