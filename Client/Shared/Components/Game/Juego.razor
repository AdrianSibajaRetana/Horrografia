<div class="game-display">
    <div class="main-character">
        <img class="pixel-art" src=@mainCharacterImagePath alt="Character"/>
    </div>

    
    <div class="game-input-container">
        <div class="block">
            <div class="article-bottom">
                <input class="input is-primary is-medium game-input" type="text" placeholder="Forma correcta">    
            </div>
        </div>
        <div class="block">
            <div class="article-bottom">
                <button class="button is-primary">Intentar</button>
            </div>            
        </div>
    </div>
    
    <div class="game-item-container">
        <img class="pixel-art @currentItemCSS" src=@currentItemImagePath alt="item"/>
    </div>
    
</div>
