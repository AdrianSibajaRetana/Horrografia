@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Horrografia.Client.Shared.Components.Dashboard
@attribute [Authorize(Roles = "Admin")]

<MudContainer  MaxWidth="MaxWidth.False" >
    <MudGrid>
        <MudItem xs="12" sm="12" md="12" Class="mt-8 px-8">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12" sm="12" md="6">
                    <DataAdministration Titulo="Administrar niveles"
                                        Subtitulo="Editar, añadir o eliminar niveles"
                                        IconoBoton="@Icons.Material.Filled.Edit"
                                        ClaseBoton="teal"
                                        TextoBoton="Administrar"
                                        LinkBoton="/dashboard/niveles" />
                </MudItem>

                <MudItem xs="12" sm="12" md="6">
                    <DataAdministration Titulo="Administrar items"
                                        Subtitulo="Administrar etiquetas"
                                        IconoBoton="@Icons.Material.Outlined.Edit"
                                        ClaseBoton="teal"
                                        TextoBoton="Administrar"
                                        LinkBoton="/dashboard/items" />
                </MudItem>

                <MudItem xs="12" sm="12" md="6">
                    <DataAdministration Titulo="Administrarción general"
                                        Subtitulo="Administrar permisos y escuelas"
                                        IconoBoton="@Icons.Material.Outlined.AdminPanelSettings"
                                        ClaseBoton="indigo"
                                        TextoBoton="Administrar"
                                        LinkBoton="/dashboard/permisos" />
                </MudItem>

                <MudItem xs="12" sm="12" md="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: auto;">

                    </MudPaper>
                </MudItem>

            </MudGrid>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudItem xs="12" sm="6" md="4">
                <MudPaper Elevation="2" Class="pa-4" ></MudPaper>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudPaper Elevation="2" Class="pa-4" ></MudPaper>
            </MudItem>
            <MudItem xs="12" sm="12" md="4">
                <MudPaper Elevation="2" Class="pa-4" ></MudPaper>
            </MudItem>
        </MudItem>

    </MudGrid>
</MudContainer>