<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <section class="hero is-fullheight-with-navbar">
                        <div class="hero-body">
                            <div class="container">
                                <div class='columns is-mobile is-centered'>
                                    <div class='column is-8'>
                                        <div class="block article-bottom">
                                            <img src="/Images/Logo_pantalla_carga.png" alt="Logo de horrografía" class="loading-logo" />
                                        </div>
                                        <div class="block">
                                            <progress class="progress is-medium is-info" max="100">45%</progress>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </Authorizing>
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        //Si no está autorizaco mandelo aqui
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p>You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
